@page
@model Web.Pages.StatusCodeModel
@{
    ViewData["Title"] = $"{Model.Code} {Model.Header}";
}

@section Styles {
    <style>
        .error {
            margin: 100px auto 20px;
            text-align: center;
        }

        .error-code {
            bottom: 60%;
            color: #2d353c;
            font-size: 96px;
            font-weight: bold;
            line-height: 100px;
        }

        .error-desc {
            font-size: 12px;
            color: #647788;
        }

        .m-b-10 {
            margin-bottom: 10px !important;
        }

        .m-t-20 {
            margin-top: 20px !important;
        }
    </style>
}

<div class="error">
    <div class="error-code m-b-10 m-t-20" style="color:#900">@Model.Code</div>
    <h3 class="font-bold"> @Model.Header</h3>
    <div class="error-desc">
        @Model.Description
        <div>
            <a class="login-detail-panel-button btn" href="@Url.Page("Index")">Home</a>
        </div>
    </div>
</div>


