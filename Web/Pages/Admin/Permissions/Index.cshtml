@page
@model IndexModel
@{
    ViewData["Title"] = "Admin | Permissions";
}

<h1>Permissions</h1>

<div class="row">
    <div class="col-md-12">
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Created</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.PermissionDtos)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>@item.CreatedAt</td>
                        <td>
                            <a asp-page="./Edit" asp-route-id="@item.Slug" class="btn btn-info btn-sm"><i class="fa fa-pencil"></i> EDIT</a>
                            <a asp-page="./Delete" asp-route-id="@item.Slug" class="btn btn-danger btn-sm"><i class="fa fa-trash"></i> DELETE</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>