@page
@model IndexModel
@{
    ViewData["Title"] = "Admin | Users";
}

<h1>Users</h1>

<div class="row">
    <div class="col-md-12">
        <table class="table">
            <thead>
                <tr>
                    <th>User Name</th>
                    <th>Email</th>
                    <th>Created</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.UserDtos)
                {
                    <tr>
                        <td>@item.UserName</td>
                        <td>@item.Email</td>
                        <td>@item.CreatedAt</td>
                        <td>
                            <a asp-page="./Edit" asp-route-id="@item.Slug" class="btn btn-info btn-sm" icon="e">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>